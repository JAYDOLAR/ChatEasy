<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/welcome_chat"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="60dp"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="@string/RegistrationActivity_take_privacy_with_you_be_yourself_in_every_message"
        app:layout_constraintBottom_toTopOf="@+id/startRegistration"
        app:layout_constraintEnd_toEndOf="@+id/startRegistration"
        app:layout_constraintStart_toStartOf="@+id/startRegistration" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/startRegistration"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:text="@string/RegistrationActivity_continue"
        android:tooltipText="Continue Process"
        app:icon="@drawable/arrow_right_1"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>